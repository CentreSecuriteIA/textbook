/* File: textbook/docs/overrides/css/buttons.css */

/* Button container */
.button-container {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 0.5em;
    padding-bottom: 5px;
    width: 100%;
}

/* Buttons */
.md-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px 16px;
    font-size: 0.8em;
    font-weight: 500;
    text-align: center;
    text-decoration: none !important;
    border: 1px solid currentColor !important;
    border-radius: 4px;
    transition: all 0.2s ease;
    flex: 1 1 0;
    min-width: 140px;
    height: 36px;
    margin-bottom: 8px;
    background: transparent;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.md-button:hover {
    background-color: rgba(125, 125, 125, 0.1);
}

.md-button:focus {
    outline: none;
}

.md-button--disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.md-button--disabled:hover {
    background-color: transparent;
}

/* Adjust icon size within buttons */
.md-button .twemoji {
    width: 1em;
    height: 1em;
    vertical-align: -0.1em;
    margin-right: 0.5em;
}

/* Responsive adjustments */
@media screen and (max-width: 768px) {
    .button-container {
        gap: 8px;
        justify-content: center;
    }

    .md-button {
        flex: 0 1 calc(50% - 4px);
        min-width: 0;
        max-width: none;
        width: calc(50% - 4px);
        height: 36px;
        padding: 6px 8px;
        font-size: 0.75em;
        margin-bottom: 6px;
    }
}

/* For very small screens, stack buttons vertically */
@media screen and (max-width: 480px) {
    .md-button {
        flex: 1 1 100%;
        width: 100%;
    }
}
